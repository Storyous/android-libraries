<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/Header.Dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/offset_16dp"
        android:layout_marginLeft="@dimen/offset_16dp"
        android:layout_weight="1"
        tools:text="Big Dialog Header" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/closeDialogButton"
        android:layout_width="@dimen/min_touchable_size"
        android:layout_height="@dimen/min_touchable_size"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/offset_8dp"
        android:tint="@color/dialog_header_cross"
        app:srcCompat="@drawable/ic_cross_24" />
</merge>
