<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Theme.MaterialDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog</item>
    </style>

    <style name="MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundInsetStart">@dimen/padding_16dp</item>
        <item name="backgroundInsetTop">@dimen/padding_16dp</item>
        <item name="backgroundInsetEnd">@dimen/padding_16dp</item>
        <item name="backgroundInsetBottom">@dimen/padding_16dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton"/>

    <style name="Button.Dialog"/>

    <style name="Header">
        <item name="android:textAppearance">?attr/textAppearanceLarge</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Header.Dialog">
        <item name="android:maxLines">2</item>
    </style>

</resources>
