<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/offset_16dp">

    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/picker"
        android:layout_width="@dimen/time_picker_size"
        android:layout_height="@dimen/time_picker_size"
        app:cs_circle_color="@color/grey"
        app:cs_circle_progress_color="@color/primary_button_light_background_default"
        app:cs_circle_stroke_width="5dp"
        app:cs_circle_style="round"
        app:cs_disable_pointer="false"
        app:cs_disable_progress_glow="false"
        app:cs_hide_progress_when_empty="false"
        app:cs_lock_enabled="false"
        app:cs_maintain_equal_circle="false"
        app:cs_max="25"
        app:cs_move_outside_circle="false"
        app:cs_negative_enabled="false"
        app:cs_pointer_alpha_ontouch="10"
        app:cs_pointer_color="@color/primary_button_light_background_default"
        app:cs_pointer_halo_color="@color/primary_button_dark_background_default"
        app:cs_pointer_stroke_width="15dp"
        app:cs_use_custom_radii="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/value"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="10"
        android:textColor="@color/primary_button_light_background_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
