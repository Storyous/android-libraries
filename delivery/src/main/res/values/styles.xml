<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SelectableItem">
        <item name="android:background">@drawable/payment_item_background_selector</item>
        <item name="android:textColor">@color/payment_item_text_color_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="TextAppearance.Small" parent="android:TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/default_text_size_small</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/default_text_size_medium</item>
    </style>

    <style name="Title">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MaterialAlertDialog.Button.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:background">@drawable/primary_button_light_background_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:panelColorBackground">@color/red</item>
        <item name="allowStacking">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">@null</item>
        <item name="android:maxLines">4</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/button_default_text_color_selector</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">@dimen/default_text_size_medium</item>
    </style>

    <style name="MaterialAlertDialog.Button.Text.Flush" parent="MaterialAlertDialog.Button.Text">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="priceIndicator">
        <item name="android:textColor">@color/menu_item_price_text</item>
    </style>

    <style name="priceIndicatorCurrency" parent="priceIndicator">
        <item name="android:textSize">@dimen/default_text_size_ultratiny</item>
    </style>

    <style name="priceIndicatorCurrency.Black" parent="priceIndicatorCurrency">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DeliveryItemDetailHeader">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="countIndicator">
        <item name="android:textColor">@color/payment_item_count_text_default</item>
    </style>

    <style name="countIndicator.Value" parent="countIndicator">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button" parent="android:Widget.Holo.Button">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/offset_8dp</item>
    </style>

    <style name="Button.Primary.Contextual" parent="Button">
        <item name="android:layout_height">@dimen/contextual_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Button.Primary.Contextual.Dark" parent="Button.Primary.Contextual">
        <item name="android:background">@drawable/primary_button_dark_background_selector</item>
    </style>

    <style name="overlayWhite">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/white_overlay</item>
    </style>

    <style name="priceIndicatorValue" parent="priceIndicator">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="priceIndicatorValue.Black" parent="priceIndicatorValue">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Primary.Contextual.Light" parent="Button.Primary.Contextual">
        <item name="android:background">@drawable/primary_button_light_background_selector</item>
    </style>

    <style name="countIndicator.Measure" parent="countIndicator">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="progressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:interpolator">@android:anim/linear_interpolator</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
